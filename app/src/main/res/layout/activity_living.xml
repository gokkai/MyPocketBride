<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LivingActivity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.formation.appli.mypocketbride.LivingActivity"
    android:background="@drawable/living"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_la_latitude"
        android:textSize="50sp"
        android:hint="latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_la_longitude"
        android:textSize="50sp"
        android:hint="longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="408dp"
        android:baselineAlignBottom="true"
        android:src="@drawable/happyblush_000" />


</LinearLayout>
